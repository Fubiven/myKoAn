<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fzp.mykotlinandroid.forKotlin.MenuActivity">

    <!-- 标题栏 -->
    <include android:id="@+id/layout_title_bar" layout="@layout/layout_title_bar"/>
    <ScrollView
        android:id="@+id/sv_menu_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title_bar"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_vertical_medium"
            android:orientation="vertical">

            <!-- 第一章Kotlin简介 -->
            <LinearLayout
                android:id="@+id/layout_chapter_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large"
                    android:text="定义和目的"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_next"
                    android:contentDescription="@string/hint"/>
            </LinearLayout>

            <!-- 分割线 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLightGray"/>

            <!-- 第二章Kotlin基础 -->
            <LinearLayout
                android:id="@+id/layout_chapter_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Kotlin基础"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_large"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_next"
                    android:contentDescription="@string/hint"/>
            </LinearLayout>

            <!-- 分割线 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLightGray"/>

            <!-- 第三章函数定义和调用 -->
            <LinearLayout
                android:id="@+id/layout_chapter_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:text="函数定义和调用"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_next"
                    android:contentDescription="@string/hint"/>
            </LinearLayout>

            <!-- 分割线 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLightGray"/>

            <!-- 第四章类、对象和接口 -->
            <LinearLayout
                android:id="@+id/layout_chapter_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:text="类、对象和接口"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_next"
                    android:contentDescription="@string/hint"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
